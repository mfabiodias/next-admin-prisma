// MySQL and Postgres
model User {
  id       Int      @id @default(autoincrement())
  name     String?  @db.VarChar(255)
  email    String   @unique(map: "email") @db.VarChar(255)
  password String   @db.VarChar(255)
  image    String?  @db.VarChar(255)
  type     UserType
  enable   Int
}

enum UserType {
  admin
  monitor
  user
}

